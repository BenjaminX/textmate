# Universal Binary configuration for TextMate
# Usage: Copy this to local.rave for Universal builds

add FLAGS    "-I/usr/local/include"
add FLAGS    "-I/opt/homebrew/include"
add LN_FLAGS "-L/usr/local/lib"
add LN_FLAGS "-L/opt/homebrew/lib"

# Universal Binary support
config release {
	arch "arm64" "x86_64" {
		add FLAGS    "-arch ${arch}"
		add LN_FLAGS "-arch ${arch}"
	}
}

config debug {
	# Single arch for faster debug builds
	add FLAGS    "-arch arm64"
	add LN_FLAGS "-arch arm64"
}